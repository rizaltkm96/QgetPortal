rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Portal app: read users (directory), read/write posts (feed).
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }
    match /posts/{postId} {
      allow read, write: if true;
    }
    // Deny everything else (your existing default).
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
